<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardKlinik"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDoctor"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dokter5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNamaDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="20sp"
                    android:fontFamily="sans-serif-black"
                    android:text="Dr. Floyd Wess " />

                <TextView
                    android:id="@+id/txtSpesDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="Dentist"
                    android:textColor="#BFBBBB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtReviewDoctor"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="(100 Reviews)"
                    android:textColor="#BAB3B3" />

                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FDFDFD"
                    android:progressBackgroundTint="#FF6E40" />

                <TextView
                    android:id="@+id/txtJumlahRating"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4.9"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>